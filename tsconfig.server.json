{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",           // Changed from CommonJS
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist/server",
    "rootDir": "src",
    "types": ["node"],
    "allowJs": true,
    "sourceMap": true
  },
  "include": ["src/server/**/*", "src/shared/**/*"],
  "exclude": ["node_modules"]
}